apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: green-backend-ingress
  namespace: default
  annotations:
    nginx.ingress.kubernetes.io/rewrite-target: /
    nginx.ingress.kubernetes.io/backend-protocol: "HTTP"
    cert-manager.io/cluster-issuer: letsencrypt-prod  # Comment this if not using HTTPS
    nginx.ingress.kubernetes.io/ssl-redirect: "true"  # Optional: force HTTPS
spec:
  ingressClassName: nginx
  tls:
    - hosts:
        - api.novepharm.store
      secretName: green-backend-tls
  rules:
    - host: api.novepharm.store
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: green-backend-service
                port:
                  number: 8080
